<div class="modal-header">
<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
<h4 class="modal-title" id="myModalLabel"><%= challenge.title %></h4>
</div>
<div class="modal-body">

<!-- Basically this is what is going to be displayed inside the Modal as content -->

<a class="carousel-control left btn-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
</a>
<a class="carousel-control right btn-control" href="#carousel-example-generic" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
</a>
<%= form_tag({:action => 'save_challenge'}, {:id => "form_"+challenge.id.to_s}) do %>
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false" data-wrap="false">
  <div class="carousel-inner">
    <% 3.times do |i| %>
      <% if i==0 %><div class= "item active"><% else %><div class= "item"><% end %>
        <div id=<%= "question_set_#{i}" %>>
          <div class="form-group">
            <label for=<%= "title_#{challenge.id}_#{i}" %> class="col-sm-2 control-label">Title</label>
            <div class="col-sm-10">
              <input type="text" class="form-control input-sm" id=<%= "title_#{challenge.id}_#{i}" %> placeholder="Title" />
            </div>
          </div>  
          <div class="form-group">
            <label for=<%= "description_#{challenge.id}_#{i}" %> class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
              <textarea rows=10 class="form-control input-sm" id=<%= "description_#{challenge.id}_#{i}" %> placeholder="Description" />
            </div>
          </div>
          <div class="form-group">
            <label for=<%= "points_#{challenge.id}_#{i}" %> class="col-sm-2 control-label">Points</label>
            <div class="col-sm-10">
              <input type="text" maxlength="3" class="form-control input-sm" id=<%= "points_#{challenge.id}_#{i}" %> placeholder="Points" />
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>
<% end %>
<div class="modal-footer">
<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
<button type="button" class="btn btn-primary" onclick=<%= "jQuery('#'+#{challenge.id}).submit"%>>Save changes</button>
</div>
